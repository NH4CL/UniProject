         <tr>
            <td>
               @LiveAzure.Resource.Model.Mall.MallArtPublish.EndTime
            </td>
            <td>
               @Html.TextBox("endTime",ViewData["EndTime"]).AsDatePicker(new DatePicker())
            </td>
         </tr>
         <tr>
            <td>
               @LiveAzure.Resource.Model.Mall.MallArtPublish.Remark
