@{
    Layout = null;
}
@model LiveAzure.Models.Member.MemberOrgCulture
@using (@Ajax.BeginForm("SaveNewOrgCulture", "Organization", new AjaxOptions { OnSuccess = "CompleteSumbitOrgCulture()" }, new { Id = "AddOrgCultureForm" }))
{
    @Html.HiddenFor(model => model.Ctype)
    <table>
    @{
    if (ViewBag.culturetype == (byte)LiveAzure.Models.ModelEnum.CultureType.LANGUAGE)
    {
        <tr>
            <td>@LiveAzure.Resource.Model.Member.MemberOrgCulture.Cultures</td>
            <td>
                @Html.DropDownListFor(model => model.aCulture, (List<SelectListItem>)ViewBag.selectList)
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>@LiveAzure.Resource.Model.Member.MemberOrgCulture.Currency</td>
            <td>
                @Html.DropDownListFor(model => model.aCurrency, (List<SelectListItem>)ViewBag.selectList)
            </td>
        </tr>
    }
}
        <tr>
            <td>@LiveAzure.Resource.Model.Member.MemberOrgCulture.Sorting</td>
            <td>
                @Html.EditorFor(model => model.Sorting)
            </td>
        </tr>
        <tr>
            <td>@LiveAzure.Resource.Model.ModelBase.Remark</td>
            <td>
                @Html.EditorFor(model => model.Remark)
            </td>
        </tr>
    </table>
    <div>
    <input type="button" value="@LiveAzure.Resource.Common.Submit" onclick="SubmitAddOrgCultureForm()" />
    </div>
    <script type="text/javascript">

        function SubmitAddOrgCultureForm() {
            $("#AddOrgCultureForm").submit();
        }

    </script>
}