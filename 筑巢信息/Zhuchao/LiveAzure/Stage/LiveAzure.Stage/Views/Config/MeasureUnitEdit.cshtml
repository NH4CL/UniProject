@{
    Layout = null;
}
@model LiveAzure.Models.General.GeneralMeasureUnit
@using (@Ajax.BeginForm("MeasureUnitSave", "Config", new AjaxOptions { UpdateTargetId = "measureUnitTable", OnComplete = "ClosePanel" }))
{
    <div class="down_AddorEdit">
        <table>
            <tr>
                <th>
                    @Html.HiddenFor(model => model.Gid)
                    @LiveAzure.Resource.Model.General.GeneralMeasureUnit.Utype
                </th>
                <td>
                    @Html.DropDownListFor(model => model.Utype, (List<SelectListItem>)ViewBag.UnitTypeList)
                    @Html.ValidationMessageFor(model => model.Utype)
                </td>
            </tr>
            <tr>
                <th>
                    @LiveAzure.Resource.Model.General.GeneralMeasureUnit.Code
                </th>
                <td>
                    @Html.EditorFor(model => model.Code)
                    @Html.ValidationMessageFor(model => model.Code)
                </td>
            </tr>
            <tr>
                <th>
                    @LiveAzure.Resource.Model.General.GeneralMeasureUnit.Name
                </th>
                <td>
                    @Html.EditorFor(model => model.Name, "Matter")
                </td>
            </tr>
        </table>
        <div>
            <input type="submit" value="@LiveAzure.Resource.Common.Submit"/>
        </div>
    </div>
}
