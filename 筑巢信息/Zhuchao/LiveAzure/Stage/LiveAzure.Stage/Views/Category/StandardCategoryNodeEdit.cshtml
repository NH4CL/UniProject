@using LiveAzure.Models.General
@using LiveAzure.Resource.Stage;
@using LiveAzure.Resource.Model;
@using System.Globalization;
@using MVC.Controls.Grid;
@using MVC.Controls;
@model GeneralStandardCategory
@using (@Ajax.BeginForm("SaveStandardCategoryNode", "Category", new AjaxOptions { UpdateTargetId = "standardCategoryTable", OnSuccess = "RefreshTree()" }, new { id = "editStandardCategoryForm" }))
{
<script type="text/javascript">

    function submitForm() {
        $("#editStandardCategoryForm").submit();
        $("#editStandardCategory").hide();
    }
    
</script>
<div id="Pro" style="margin: 2px;">
    <div class="down_AddorEdit">
        <table>
            <tr>
                @Html.HiddenFor(model => model.Gid)
                <th>
                    @ProgramController.parent
                </th>
                @if (Model.Parent != null)
                {
                    <td>
                        @Model.Parent.Name.Matter
                    </td>
                }
                else
                {
                    <td>
                        @Html.Label("")
                    </td>
                }
            </tr>
            <tr>
                <th>
                    @Html.Label(@LiveAzure.Resource.Model.General.GeneralStandardCategory.Code)
                </th>
                <td>
                    @Html.EditorFor(model => model.Code)
                    @Html.ValidationMessageFor(model => model.Code)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.Label(@LiveAzure.Resource.Model.General.GeneralStandardCategory.Name)
                </th>
                <td>
                    @Html.EditorFor(model => model.Name, "Matter")
                </td>
            </tr>
            <tr>
                <th>
                    @Html.Label(@LiveAzure.Resource.Model.General.GeneralStandardCategory.Sorting)
                </th>
                <td>
                    @Html.EditorFor(model => model.Sorting)
                    @Html.ValidationMessageFor(model => model.Sorting)
                </td>
            </tr>
            <tr>
                <th>@Html.Label(@LiveAzure.Resource.Model.ModelBase.Remark)</th>
                <td>@Html.EditorFor(model => model.Remark)
                    @Html.ValidationMessageFor(model => model.Remark)
                </td>
            </tr>
        </table>
        <div>
            <input type="button" value="@LiveAzure.Resource.Common.Submit" onclick="submitForm();" />
            <input type="reset" value="@LiveAzure.Resource.Common.Reset" />
        </div>
    </div>
</div>
}
