@using LiveAzure.Models.General
@using LiveAzure.Resource.Stage;
@using LiveAzure.Resource.Model;
@using System.Globalization
@model GeneralPrivateCategory
@{
    Layout = null;
    }       
@using (@Ajax.BeginForm("AddPrivateCategoryNode", "Category", new AjaxOptions { UpdateTargetId = "privateCategoryTable", OnSuccess = "RefreshPrivateTree()" }, new { id = "addPrivateCategoryForm" }))
{
<script type="text/javascript">

    function submitForm() {
        $("#addPrivateCategoryForm").submit();
        $("#addPrivateCategory").hide();
    }
</script>

<div style="margin:2px;">
    <h2>@CategoryController.AddPrivateCategory</h2>
    <div class="down_AddorEdit">
        <table>
            @Html.HiddenFor(model => model.aParent)
            @Html.HiddenFor(model => model.Ctype)
        
            <tr>
                <th>@ProgramController.parent</th>

                @{if (Model.aParent != Guid.Empty && Model.aParent != null)
                  {
                        <td>@Model.Parent.Name.Matter</td>
                  }
                 }
            </tr>
            <tr>
            <th>@LiveAzure.Resource.Model.General.GeneralPrivateCategory.Code</th>
                <td>@Html.EditorFor(model => model.Code)
                    @Html.ValidationMessageFor(model => model.Code)
                </td>
            </tr>
            <tr>
                <th>@LiveAzure.Resource.Model.General.GeneralPrivateCategory.Name</th>
                <td>
                    @Html.EditorFor(model => model.Name, "Matter")
                </td>
            </tr>
            <tr>
                <th>@LiveAzure.Resource.Model.General.GeneralPrivateCategory.Sorting</th>
                <td>@Html.EditorFor(model => model.Sorting)
                    @Html.ValidationMessageFor(model => model.Sorting)
                </td>
            </tr>
            <tr>
                <th>@LiveAzure.Resource.Model.General.GeneralPrivateCategory.Show</th>
                <td>@Html.DropDownListFor(model => model.Show,(List<SelectListItem>)ViewBag.IsShow)
                    @Html.ValidationMessageFor(model => model.Show)
                </td>
            </tr>
            <tr>
                <th>@LiveAzure.Resource.Model.General.GeneralPrivateCategory.StdUnit</th>
                <td>@Html.DropDownListFor(model => model.StdUnit,(List<SelectListItem>)ViewBag.UnitList)
                    @Html.ValidationMessageFor(model => model.StdUnit)
                </td>
            </tr>
            <tr>
                <th>@LiveAzure.Resource.Model.ModelBase.Remark</th>
                <td>@Html.EditorFor(model => model.Remark)
                    @Html.ValidationMessageFor(model => model.Remark)
                </td>
            </tr>
        </table> 
        <div>
            <input type="button" value="@LiveAzure.Resource.Common.Submit" onclick="submitForm();" />
            <input type="reset" value="@LiveAzure.Resource.Common.Reset" />
        </div> 
    </div>
</div>
}