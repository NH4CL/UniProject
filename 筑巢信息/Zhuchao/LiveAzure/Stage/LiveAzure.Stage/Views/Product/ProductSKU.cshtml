@{
    Layout = null;
}
<script src="../../Scripts/jquery-ui.min.js" type="text/javascript"></script>
<script type="text/javascript">

    $(function () {
        $.ajax({
            type: "POST",
            url: "/Product/ProductSKUGrid",
            success: function (html) {
                $("#tabGrid").html(html);
            }
        });

    });

    function tabSKUAdd() {
        $.ajax({
            type: "POST",
            url: "/Product/AddProductSKU",
            success: function (html) {
                $("#productSKUAdd").html(html);

            }
        });
    };
    function tabSKUEdit() {
        var id = $("#grid2").jqGrid("getGridParam", "selrow");
        $.ajax({
            type: "POST",
            url: "/Product/EditProductSKU",
            success: function (html) {
                $("#productSKUEdit").html(html);
            }
        });

    };
</script>
<div id="tabsSKU">
    <div id="tabGrid">
    </div>
    <div id="productSKUAdd">
    </div>
    <div id="productSKUEdit">
    </div>
</div>
