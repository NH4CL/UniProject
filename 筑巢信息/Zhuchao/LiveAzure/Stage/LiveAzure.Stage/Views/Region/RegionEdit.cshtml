@{
    Layout = null;
    }
@using LiveAzure.Models.General;
@model GeneralRegion

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> 
<div id="regionEditMain">
    @using (@Html.BeginForm("EditRegion", "Region", new { id = Model.Gid, OnSuccess = "ClosePanel();" }))
    {
        @Html.ValidationSummary(true)    
        <div class="down_AddorEdit">
            <table>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.Parent
                    </th>
                    @if (Model.Parent != null)
                    {
                        <td>
                            @Html.LabelForModel(Model.Parent.FullName)
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.LabelForModel("")
                        </td>
                    }
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.Code
                    </th>
                    <td>
                        @Html.EditorFor(model => model.Code)@Html.ValidationMessageFor(model => model.Code)
                    </td>
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.FullName
                    </th>
                    <td>
                        @Html.EditorFor(model => model.FullName)@Html.ValidationMessageFor(model => model.FullName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.ShortName
                    </th>
                    <td>
                        @Html.EditorFor(model => model.ShortName)@Html.ValidationMessageFor(model => model.ShortName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.Sorting
                    </th>
                    <td>
                        @Html.EditorFor(model => model.Sorting)@Html.ValidationMessageFor(model => model.Sorting)
                    </td>
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.RegionLevel
                    </th>
                    <td>
                        @Html.EditorFor(model => model.RegionLevel)@Html.ValidationMessageFor(model => model.RegionLevel)
                    </td>
                </tr>
                <tr>
                    <th>
                        @LiveAzure.Resource.Model.General.GeneralRegion.Remark
                    </th>
                    <td>
                        @Html.TextAreaFor(model => model.Remark)@Html.ValidationMessageFor(model => model.Remark)
                    </td>
                </tr>
            </table>
            <div>
                <input type="submit" value="@LiveAzure.Resource.Stage.RegionController.Submit" />
                <input type="reset" value="@LiveAzure.Resource.Stage.RegionController.Reset" />
            </div>
        </div>
    
    }
</div>
