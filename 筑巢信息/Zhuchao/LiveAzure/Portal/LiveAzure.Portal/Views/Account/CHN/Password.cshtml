                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="border: none;">
                        @*<input type="image" src="@Url.Content("~/Content/img/submit.jpg")" alt=" 提交" />*@
                        <input type="submit" style="background-image:@Url.Content("~/Content/img/submit.jpg")" value="提交" />
                    </td>
                </tr>
            </table>
            </form>
        </div>
