@{
    Layout = null;
}
<script type="text/javascript">    
    function first() {
        var pageNow = document.getElementById("pageNow").value;
        $.ajax({
            type: "post",
            url: "/Account/orderTable",
            data: { pNow: pageNow,type:"f"},
            success: function (html) {
                $("#Title_list").html(html);
                $.ajax({
                    type: "post",
                    url: "/Account/First",
                    data: { pNow: pageNow},
                    success: function (html) {
                        $("#foot").html(html);
                    }
                })
            }
        })
        
    }
    function tail() {
        var pageNow = document.getElementById("pageNow").value;
        $.ajax({
            type: "post",
            url: "/Account/orderTable",
            data: { pNow: pageNow,type:"t"},
            success: function (html) {
